# Smart Waste Detection System Configuration

# API Settings
API_HOST=localhost
API_PORT=8000
API_DEBUG=true

# Frontend Settings  
FRONTEND_HOST=localhost
FRONTEND_PORT=5173

# Model Settings
MODEL_PATH=models/final.pt
MODEL_CONFIDENCE_THRESHOLD=0.5
MODEL_IOU_THRESHOLD=0.4

# Detection Settings
MAX_DETECTIONS_PER_FRAME=10
DETECTION_CLASSES=battery,biological,cardboard,clothes,glass,metal,paper,plastic,shoes,trash

# Database Settings (if using)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=waste_detection
DB_USER=postgres
DB_PASSWORD=password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/system.log

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=32
DEVICE=auto  # auto, cpu, cuda

# UI Settings
UI_THEME=light
UI_LANGUAGE=en
SHOW_CONFIDENCE_SCORES=true
SHOW_BOUNDING_BOXES=true

# Statistics
STATS_RETENTION_DAYS=30
ENABLE_ANALYTICS=true

# Security (for production)
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
